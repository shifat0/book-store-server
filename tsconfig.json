{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts", "src/types/types.d.ts"],
  "exclude": ["node_modules"]
}
